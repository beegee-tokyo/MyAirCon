<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/fuji_denzo"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:visibility="gone"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context="tk.giesecke.myaircon.myAirCon"
	tools:ignore="ButtonStyle"
	tools:showIn="@layout/my_air_con">

	<LinearLayout
		android:id="@+id/bar_top"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:baselineAligned="false"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<ImageButton
					android:id="@+id/im_icon_fd"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@color/colorPrimary"
					android:contentDescription="@string/bt_txt_icon"
					android:src="@drawable/ic_office"/>

				<TextView
					android:id="@+id/txt_device_fd"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:text="@string/bt_txt_device_living"
					android:textAppearance="?android:attr/textAppearanceMedium"/>

			</LinearLayout>

			<Button
				android:id="@+id/bt_on_off_fd"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:checked="false"
				android:onClick="onClick"
				android:text="@string/bt_txt_power"
				android:textAppearance="@android:style/TextAppearance.Small"/>

			<View
				android:id="@+id/bt_on_off_hl_fd"
				android:layout_width="match_parent"
				android:layout_height="5dp"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:layout_marginTop="-5dp"
				android:background="@android:color/darker_gray"/>

			<TextView
				android:id="@+id/txt_fan_bar_fd"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="@string/bt_txt_fan_bar"
				android:textAppearance="?android:attr/textAppearanceMedium"/>

			<LinearLayout
				android:id="@+id/bar_fan_btn_fd"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<Button
					android:id="@+id/bt_fan_high_fd"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:checked="false"
					android:onClick="onClick"
					android:text="@string/bt_txt_fan_high"
					android:textAppearance="?android:attr/textAppearanceSmall"/>

				<Button
					android:id="@+id/bt_fan_med_fd"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:checked="false"
					android:onClick="onClick"
					android:text="@string/bt_txt_fan_med"
					android:textAppearance="?android:attr/textAppearanceSmall"/>

				<Button
					android:id="@+id/bt_fan_low_fd"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:checked="true"
					android:onClick="onClick"
					android:text="@string/bt_txt_fan_low"
					android:textAppearance="?android:attr/textAppearanceSmall"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/bar_fan_light_fd"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="-5dp"
				android:orientation="horizontal">

				<View
					android:id="@+id/bt_fan_high_hl_fd"
					android:layout_width="match_parent"
					android:layout_height="5dp"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:layout_weight="1"
					android:background="@android:color/darker_gray"/>

				<View
					android:id="@+id/bt_fan_med_hl_fd"
					android:layout_width="match_parent"
					android:layout_height="5dp"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:layout_weight="1"
					android:background="@android:color/darker_gray"/>

				<View
					android:id="@+id/bt_fan_low_hl_fd"
					android:layout_width="match_parent"
					android:layout_height="5dp"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:layout_weight="1"
					android:background="@android:color/holo_red_light"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:baselineAligned="false"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/txt_cons_fd"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:text="@string/txt_consumption"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textStyle="bold"/>

				<TextView
					android:id="@+id/txt_cons_val_fd"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:text="@string/txt_num"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textStyle="bold"/>

				<TextView
					android:id="@+id/txt_auto_status_fd"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:text="@string/txt_auto_status"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textStyle="bold"/>

				<TextView
					android:id="@+id/txt_auto_status_val_fd"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:text="@string/txt_num"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textStyle="bold"/>

				<TextView
					android:id="@+id/txt_temp_fd"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:text="@string/txt_cool_temp"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textStyle="bold"/>

				<TextView
					android:id="@+id/txt_temp_val_fd"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:text="@string/txt_num"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textStyle="bold"/>

			</LinearLayout>

			<Button
				android:id="@+id/bt_auto_fd"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:checked="true"
				android:onClick="onClick"
				android:text="@string/bt_txt_auto"
				android:textAppearance="@android:style/TextAppearance.Small"/>

			<View
				android:id="@+id/bt_auto_hl_fd"
				android:layout_width="match_parent"
				android:layout_height="5dp"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:layout_marginTop="-5dp"
				android:background="@android:color/holo_red_light"/>

			<TextView
				android:id="@+id/txt_mode_bar_fd"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/bt_txt_mode_bar"
				android:textAppearance="?android:attr/textAppearanceMedium"/>

			<LinearLayout
				android:id="@+id/bar_mode_btn_fd"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<Button
					android:id="@+id/bt_cool_fd"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:onClick="onClick"
					android:text="@string/bt_txt_cool"
					android:textAppearance="?android:attr/textAppearanceSmall"/>

				<Button
					android:id="@+id/bt_dry_fd"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:checked="false"
					android:onClick="onClick"
					android:text="@string/bt_txt_dry"
					android:textAppearance="?android:attr/textAppearanceSmall"/>

				<Button
					android:id="@+id/bt_fan_fd"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:checked="true"
					android:onClick="onClick"
					android:text="@string/bt_txt_fan"
					android:textAppearance="?android:attr/textAppearanceSmall"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/bar_mode_light_fd"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="-5dp"
				android:orientation="horizontal">

				<View
					android:id="@+id/bt_cool_hl_fd"
					android:layout_width="match_parent"
					android:layout_height="5dp"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:layout_weight="1"
					android:background="@android:color/darker_gray"/>

				<View
					android:id="@+id/bt_dry_hl_fd"
					android:layout_width="match_parent"
					android:layout_height="5dp"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:layout_weight="1"
					android:background="@android:color/darker_gray"/>

				<View
					android:id="@+id/bt_fan_hl_fd"
					android:layout_width="match_parent"
					android:layout_height="5dp"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:layout_weight="1"
					android:background="@android:color/holo_red_light"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>


	<TextView
		android:id="@+id/txt_temp_bar_fd"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/bar_top"
		android:gravity="center_horizontal"
		android:text="@string/bt_txt_temp_bar"
		android:textAppearance="?android:attr/textAppearanceMedium"/>

	<LinearLayout
		android:id="@+id/bar_temp_btn_fd"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/txt_temp_bar_fd"
		android:orientation="horizontal">

		<Button
			android:id="@+id/bt_plus_fd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="2dp"
			android:layout_weight="1"
			android:background="@android:color/holo_green_light"
			android:gravity="center_horizontal"
			android:onClick="onClick"
			android:text="@string/bt_txt_plus"
			android:textSize="30sp"
			android:textStyle="bold"
			tools:ignore="ButtonStyle"/>

		<Button
			android:id="@+id/bt_minus_fd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="2dp"
			android:layout_weight="1"
			android:background="@android:color/holo_red_light"
			android:gravity="center_horizontal"
			android:onClick="onClick"
			android:text="@string/bt_txt_minus"
			android:textSize="30sp"
			android:textStyle="bold"
			tools:ignore="ButtonStyle"/>

	</LinearLayout>

</RelativeLayout>
